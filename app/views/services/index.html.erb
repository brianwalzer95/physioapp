<style>
table, th, td {
    border: 1px solid black;
}
</style>
<header>
    <div class="container">
         <div class="row">
            <div class="col-lg-12">
                <p id="notice"><%= notice %></p>

				<h1>Listing Services</h1>

				<table>
				  <thead>
					<tr>
					  <th>Service name</th>
					  <th>Price</th>
					  <th colspan="3"></th>
					</tr>
				  </thead>

				  <tbody>
					<% @services.each do |service| %>
					  <tr>
						<td><%= service.service_name %></td>
						<td><%= service.price %></td>
						<td><%= link_to 'Show', service %></td>
						<td><%= link_to 'Edit', edit_service_path(service) %></td>
						<td><%= link_to 'Destroy', service, method: :delete, data: { confirm: 'Are you sure?' } %></td>
					  </tr>
					<% end %>
				  </tbody>
				</table>
				<%= button_to 'Apply Discount', discount_path,method: :get %>
				<br>

				<%= link_to 'New Service', new_service_path %>

            </div>
        </div>
    </div>
</header>
